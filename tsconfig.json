{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": false,
      "noImplicitAny": true,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": true,
      "allowJs": true,
      "skipLibCheck": true,
      "outDir": "./build",
      "moduleResolution": "node",
      "lib": ["es6", "es2017"]
    },
    "include": ["./**/*"],
    "exclude": ["node_modules"]
  }
  